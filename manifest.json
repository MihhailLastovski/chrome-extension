{
  "manifest_version": 3,
  "name": "Highlight Text Extension",
  "version": "1.0",
  "permissions": [
    "identity",
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "downloads",
    "contextMenus"
  ],
  "action": {
    "default_popup": "pages/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [ "script/contentScript.js" ]
    }
  ],
  "background": {
    "service_worker": "script/background.js"
  }
}